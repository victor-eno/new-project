---
import ProjectButton from "./ProjectButton.astro";
---
<div class="hero-container">
    <div class="hero-text">
        <h1 class="greetings">hello!</h1>
        <h1 class="name">I am <span class="span-text-name">victor</span></h1>
        
        <p>
            I'm a <span class="span-text-bio">web developer</span> that loves creating
            <span class="span-text-bio">instinctive Web Application,</span> <span class="span-text">clean and visaully aesthetic</span> web interfaces
            </span>
        </p>
        <ProjectButton />
    </div>
</div>

<style>
	.hero-container {
        width: 100%;
        height: 80vh;
        position: relative;
        display: flex;
        flex-direction: column;
    }
    .hero-text {
        font-family: 'Poppins', Courier, monospace;
        text-align: start;
        padding: 4.5em;
    }
    .greetings {
        font-size: 8em;
        font-weight: 700;
        color: var(--moody-night);
        text-transform: uppercase;
        animation: bounce 2s;
    }
    .name {
        font-size: 8em;
        font-weight: 700;
        color: var(--moody-night);
        text-transform: uppercase;
        line-height: 0.1em;
    }
    @keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0);
        }
        40% {
            transform: translateY(-20px);
        }
        60% {
            transform: translateY(-15px);
        }
        100% {
            transform: translateY(-12px);
        }
    }
    .span-text-name {
        color: rgb(244, 73, 73);
        font-weight: 900;
    }
    .hero-container p {
        color: var(--moody-night);
        font-size: 2.8em;
        font-weight: 50;
        line-height: 1em;
        width: 85%;
        padding-top: 1em;
        padding-bottom: 0.5em;
    }
    .span-text-bio {
        color: rgb(244, 73, 73);
        opacity: 0.8;
        font-weight: 400;
    }
    @media screen and (max-width: 800px) {
        .hero-container {
        width: 100%;
        height: 100vh;
        position: relative;
        display: flex;
        flex-direction: column;
        flex-wrap: wrap;
    } 
    .hero-text {
        text-align: left;
        padding: 5em 0.5em;
    }
    .greetings {
        font-size: 4em;
        font-weight: 700;
        text-transform: uppercase;
        animation: bounce 2s;
    }
    .name {
        font-size: 4em;
        font-weight: 700;
        text-transform: uppercase;
        line-height: 0em;
    }
    }
</style>



















